---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Hlasovanie" />
        <meta name="viewport" content="width=device-width" />
        <link
            href="https://fonts.googleapis.com/css?family=Inter&display=swap"
            rel="stylesheet"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        font-family: "Inter", system-ui, sans-serif;
        background: #ffffff;
        color: #1a1a1a;
    }

    body {
        line-height: 1.6;
    }
</style>
