---
import Layout from "../layouts/Layout.astro";
import Calendar from "../icons/Calendar.astro";
import Logo from "../icons/Logo.astro";
---

<Layout title="Prihlásenie úspešné">
    <main
        class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-[#e8f5e9] to-[#c8e6c9] p-4 sm:p-6 relative overflow-hidden"
    >
        <!-- Background animation -->
        <div
            class="absolute -top-1/2 -right-1/2 w-full h-full bg-[radial-gradient(circle,rgba(255,255,255,0.3)_0%,transparent_70%)] animate-[float_20s_infinite_ease-in-out]"
        >
        </div>

        <div
            class="w-full max-w-[700px] bg-white rounded-3xl shadow-2xl p-8 sm:p-12 text-center border-2 border-green-500/20 relative z-10 animate-[slideUp_0.6s_ease-out]"
        >
            <div class="flex justify-center mb-6">
                <Logo
                    class="h-20 w-auto"
                    aria-label="Logo SOŠ Elektrotechnická"
                />
            </div>

            <h1
                class="text-3xl sm:text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-[#28a745] to-[#20c997] mb-5 drop-shadow-sm"
            >
                Prihlásenie bolo úspešné!
            </h1>

            <p class="text-lg text-gray-600 leading-relaxed mb-10 font-medium">
                Ďakujeme za prihlásenie na odborové dni. Vaša prihláška bola
                úspešne odoslaná a uložená do systému.
            </p>

            <div
                class="bg-gradient-to-br from-gray-50 to-gray-100 border-l-[5px] border-yellow-500 rounded-xl p-6 sm:p-8 text-left mb-10 shadow-sm border-y border-r border-gray-200"
            >
                <h2 class="text-xl font-bold text-gray-900 mb-4">Čo ďalej?</h2>
                <ul class="space-y-3">
                    <li
                        class="pl-9 relative text-gray-700 font-medium leading-relaxed before:absolute before:left-0 before:w-6 before:h-6 before:flex before:items-center before:justify-center before:bg-green-500/10 before:text-green-600 before:font-bold before:rounded-full before:content-['✓']"
                    >
                        Kontaktná osoba vás bude v prípade potreby kontaktovať
                        na uvedený email alebo telefón
                    </li>
                </ul>
            </div>

            <div
                class="flex flex-col sm:flex-row gap-5 justify-center flex-wrap mb-10"
            >
                <a
                    href="/"
                    class="px-8 py-4 rounded-xl font-bold text-base uppercase tracking-wide transition-all duration-300 relative overflow-hidden group bg-gradient-to-br from-[#d4af37] to-[#c09a2a] text-white shadow-lg shadow-yellow-500/30 hover:shadow-xl hover:shadow-yellow-500/40 hover:-translate-y-1"
                >
                    <span class="relative z-10">Prihlásiť ďalšieho žiaka</span>
                    <div
                        class="absolute top-1/2 left-1/2 w-0 h-0 bg-white/30 rounded-full -translate-x-1/2 -translate-y-1/2 transition-all duration-500 group-hover:w-[300px] group-hover:h-[300px]"
                    >
                    </div>
                </a>
            </div>

            <div
                id="session-info"
                class="hidden bg-gradient-to-br from-[#fff9e6] to-[#fef5d4] border-[3px] border-[#d4af37] rounded-2xl p-6 sm:p-8 mt-10 text-left shadow-lg shadow-yellow-500/20"
            >
                <h3
                    class="text-xl font-bold text-gray-900 mb-6 text-center pb-3 border-b-2 border-[#d4af37]"
                >
                    Detail prihlásenia:
                </h3>

                <div class="mb-6 text-center">
                     <span class="text-gray-600 font-bold uppercase tracking-wider text-sm block mb-1">Žiak:</span>
                     <span class="text-2xl font-extrabold text-gray-900" id="student-name">-</span>
                </div>

                <div id="sessions-list" class="flex flex-col gap-6">
                    <!-- Javascript will populate this -->
                </div>
            </div>
        </div>

        <div
            class="mt-12 text-center text-gray-600/80 text-sm font-semibold relative z-10"
        >
            <span>Kristián Kekeš & SOŠ Elektrotechnická</span>
        </div>
    </main>

    <script>
        // Get registration details from localStorage if available
        const registrationData = localStorage.getItem("lastRegistration");

        if (registrationData) {
            try {
                const data = JSON.parse(registrationData);
                const sessionInfo = document.getElementById("session-info");
                const sessionsList = document.getElementById("sessions-list");

                if (sessionInfo && sessionsList && data.student) {
                    document.getElementById("student-name")!.textContent =
                        `${data.student.firstName} ${data.student.lastName}`;

                    // Handle normalized sessions array (new format) or single session (old format)
                    let sessions = [];
                    if (data.sessions && Array.isArray(data.sessions)) {
                        sessions = data.sessions;
                    } else if (data.session) {
                        sessions = [data.session];
                    }

                    if (sessions.length > 0) {
                         // Sort sessions by date and time
                         sessions.sort((a: any, b: any) => {
                             const dateA = new Date(a.date + " " + a.startTime);
                             const dateB = new Date(b.date + " " + b.startTime);
                             return dateA.getTime() - dateB.getTime();
                         });

                         sessions.forEach((session: any) => {
                             const sessionEl = document.createElement('div');
                             sessionEl.className = "bg-white rounded-xl border border-[#d4af37]/30 shadow-sm overflow-hidden";

                             const turnusText = session.turnus ? `<div class="bg-[#d4af37]/10 text-[#d4af37] font-bold text-xs uppercase px-4 py-1 border-b border-[#d4af37]/20">${session.turnus}. turnus</div>` : '';

                             // SVG Icons
                             const calendarIcon = '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>';
                             const clockIcon = '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>';

                             sessionEl.innerHTML = `
                                ${turnusText}
                                <div class="p-5 grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div class="flex flex-col gap-1">
                                        <span class="text-xs text-gray-500 font-bold uppercase tracking-wider">Odbor</span>
                                        <span class="text-lg font-bold text-gray-900">${session.fieldCode} - ${session.fieldName}</span>
                                    </div>
                                    <div class="flex flex-col gap-1">
                                        <span class="text-xs text-gray-500 font-bold uppercase tracking-wider">Termín</span>
                                        <div class="flex flex-col">
                                            <span class="text-lg font-bold text-gray-900 flex items-center gap-2">
                                                ${calendarIcon}
                                                ${session.date}
                                            </span>
                                            <span class="text-base font-medium text-gray-600 flex items-center gap-2">
                                                ${clockIcon}
                                                ${session.startTime} - ${session.endTime}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                             `;
                             sessionsList.appendChild(sessionEl);
                         });

                         sessionInfo.classList.remove("hidden");
                    }
                }

                // Clear the data after displaying
                localStorage.removeItem("lastRegistration");
            } catch (e) {
                console.error("Error parsing registration data:", e);
            }
        }
    </script>
</Layout>

<style>
    /* Custom animations - kept here as they are complex to inline fully in Tailwind classes without config extension */
    @keyframes float {
        0%,
        100% {
            transform: translate(0, 0);
        }
        50% {
            transform: translate(-20%, -20%);
        }
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
</style>
