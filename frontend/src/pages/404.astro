---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page not found">
  <main>
    <div class="container">
      <h1>404</h1>
      <p>Page not found</p>
      <a href="/">Back to home</a>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }

  .container {
    text-align: center;
    margin-top: 4rem;
  }

  h1 {
    font-size: 4rem;
    font-weight: 800;
    margin: 0 0 1rem 0;
  }

  p {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 2rem;
  }

  a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    transition: opacity 0.3s;
  }

  a:hover {
    opacity: 0.9;
  }

    @media (min-width: 720px) {
        .nav ul {
            grid-template-columns: repeat(4, minmax(0, 1fr));
        }
    }
</style>
