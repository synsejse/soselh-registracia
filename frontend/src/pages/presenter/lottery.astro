<Layout title="Hlasovanie 4.B - LotÃ©ria">
  <main class="presenter-container">
    <header class="presenter-header">
      <span class="presenter-title">Hlasovanie 4.B</span>
    </header>

    <div class="lottery-content">
      <div class="winner-section">
        <span class="vote-count">Vyhral/a: <span id="winnerName">{winnerName}</span></span>
        <span class="vote-count">ÄŒÃ­slo: <span id="winnerNumber">{winnerNumber}</span></span>
      </div>

      <button class="lottery-btn">VyÅ¾rebovaÅ¥</button>

      <div id="partyEmoji" class="party-emoji">ðŸŽ‰</div>
    </div>
  </main>

  <script>
    function getRandomWinner() {
      const names = ["JÃ¡n", "Marko", "Petra", "Zuzana", "MiloÅ¡"];
      const numbers = Math.floor(Math.random() * 30) + 1;
      return {
        name: names[Math.floor(Math.random() * names.length)],
        number: numbers,
      };
    }

    function createConfetti() {
      const confettiPieces = 50;
      for (let i = 0; i < confettiPieces; i++) {
        const confetti = document.createElement("div");
        confetti.style.position = "fixed";
        confetti.style.width = "10px";
        confetti.style.height = "10px";
        confetti.style.borderRadius = "50%";
        confetti.style.pointerEvents = "none";
        confetti.style.left = Math.random() * 100 + "%";
        confetti.style.top = "-10px";
        const colors = ["#D4AF37", "#764ba2", "#f093fb", "#4facfe"];
        confetti.style.backgroundColor =
          colors[Math.floor(Math.random() * colors.length)];
        document.body.appendChild(confetti);

        let top = -10;
        const speed = 2 + Math.random() * 3;
        const interval = setInterval(() => {
          top += speed;
          confetti.style.top = top + "px";
          confetti.style.opacity = 1 - top / window.innerHeight;

          if (top > window.innerHeight) {
            clearInterval(interval);
            confetti.remove();
          }
        }, 20);
      }
    }

    function selectWinner() {
      const winner = getRandomWinner();
      const nameEl = document.getElementById("winnerName");
      const numberEl = document.getElementById("winnerNumber");
      const partyEl = document.getElementById("partyEmoji");

      if (nameEl) nameEl.textContent = winner.name;
      if (numberEl) numberEl.textContent = winner.number;

      // Show party emoji
      if (partyEl) {
        partyEl.style.display = "block";
        setTimeout(() => {
          partyEl.style.display = "none";
        }, 2000);
      }

      // Create confetti
      createConfetti();
    }

    function setupLotteryButton() {
      const btn = document.querySelector(".lottery-btn");
      if (btn) {
        btn.addEventListener("click", selectWinner);
      }
    }

    // Initialize when DOM is ready
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", setupLotteryButton);
    } else {
      setupLotteryButton();
    }
  </script>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 100%;
    background-color: #ffffff;
  }

  .presenter-header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .presenter-title {
    font-family: "Inter", sans-serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: #1a1a1a;
  }

  .lottery-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: center;
    align-items: center;
    gap: 3rem;
  }

  .winner-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: center;
  }

  .vote-count {
    font-family: "Inter", sans-serif;
    font-size: 2.5rem;
    color: #1a1a1a;
    font-weight: 600;
  }

  .lottery-btn {
    font-family: "Inter", sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #ffffff;
    background-color: #D4AF37;
    border: none;
    border-radius: 8px;
    padding: 1rem 3rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .lottery-btn:hover {
    background-color: #f5cb40;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(234, 221, 102, 0.3);
  }

  .lottery-btn:active {
    transform: translateY(0);
  }

  .party-emoji {
    font-size: 5rem;
    display: none;
    animation: bounce 0.6s ease;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @keyframes bounce {
    0% {
      transform: translate(-50%, -50%) scale(0);
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
    }
    100% {
      transform: translate(-50%, -50%) scale(1);
    }
  }
</style>
