---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hlasovanie">
  <main class="voting-container">
    <span class="voting-title">Hlasovanie<br />nieje pripravené.</span>
    <div class="divider"></div>
    <span class="voting-footer">Tobias Slabej & Kristián Kekeš @ 2025</span>
  </main>

  <script>
    async function checkVotingReady() {
      try {
        // Replace with your actual endpoint
        const response = await fetch("/api/voting/status");
        const data = await response.json();

        if (data.ready === true) {
          window.location.href = "/enter";
        }
      } catch (error) {
        console.error("Error checking voting status:", error);
      }
    }

    // Check every 2 seconds if voting is ready
    const checkInterval = setInterval(checkVotingReady, 2000);

    // Optional: Stop checking after 5 minutes to avoid infinite requests
    setTimeout(() => {
      clearInterval(checkInterval);
    }, 5 * 60 * 1000);

    // Initial check
    checkVotingReady();
  </script>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
    gap: 1.5rem;
  }

  .voting-title {
    font-family: "Inter", sans-serif;
    font-size:40px;
    font-weight: 600;
    text-align: center;
    color: #1a1a1a;
    line-height: 1.3;
  }

  .divider {
    width: 60px;
    height: 4px;
    background-color: #D4AF37;
    border-radius: 2px;
  }

  .voting-footer {
    font-family: "Inter", sans-serif;
    font-size: 1rem;
    color: #666666;
  }
</style>
