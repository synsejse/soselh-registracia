---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hlasovanie">
    <main class="voting-container">
        <span class="voting-title">Hlasovanie<br />nie je pripravené.</span>
        <div class="divider"></div>
        <span class="voting-footer">Tobias Slabej & Kristián Kekeš @ 2025</span>
    </main>

    <script>
        import { api } from "../lib/api";

        // Setup WebSocket for real-time updates
        api.subscribeToStatus((status) => {
            if (status.has_voted) {
                window.location.href = "/vote-complete";
                return;
            }

            if (status.ready) {
                window.location.href = "/enter";
            }
        });
    </script>
</Layout>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Google+Sans+Flex:opsz,wght@6..144,1..1000&display=swap");
    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
        gap: 1.5rem;
    }

    .voting-title {
        font-family: "Google Sans Flex", sans-serif;
        font-size: 40px;
        font-weight: 600;
        text-align: center;
        color: #1a1a1a;
        line-height: 1.3;
    }

    .divider {
        width: 60px;
        height: 4px;
        background-color: #d4af37;
        border-radius: 2px;
    }

    .voting-footer {
        font-family: "Google Sans Flex", sans-serif;
        font-size: 1rem;
        color: #666666;
    }
</style>
