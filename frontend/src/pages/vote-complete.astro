---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hlasovanie 4.B">
    <main class="voting-container">
        <span class="voting-title">Hlasovanie 4.B</span>
        <div class="divider"></div>
        <span class="tick">✅</span>
        <span class="main-text">Ďakujeme za hlasovanie.</span>

        <div class="id-container">
            <span class="voter-id-label">Vaše ID:</span>
            <span id="voter-id" class="voter-id">...</span>
        </div>

        <div class="divider"></div>
        <span class="voting-footer">Tobias Slabej & Kristián Kekeš @ 2025</span>
    </main>

    <script>
        import { api } from "../lib/api";

        async function init() {
            try {
                const session = await api.getSession();
                const voterIdElement = document.getElementById("voter-id");
                if (voterIdElement) {
                    voterIdElement.textContent = session.voter_id;
                }

                api.subscribeToStatus((status) => {
                    if (!status.has_voted) {
                        window.location.href = "/vote";
                    }
                });
            } catch (error) {
                console.error("Error loading session:", error);
                window.location.href = "/enter";
            }
        }

        init();
    </script>
</Layout>

<style>
    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
        gap: 1.5rem;
    }

    .voting-footer {
        font-family: "Inter", sans-serif;
        font-size: 1rem;
        color: #666666;
    }

    .main-text {
        font-family: "Inter", sans-serif;
        font-size: 20px;
        color: #111111;
    }

    .id-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .voter-id-label {
        font-family: "Inter", sans-serif;
        font-size: 1rem;
        color: #666666;
    }

    .voter-id {
        font-family: "Inter", sans-serif;
        font-size: 3rem;
        font-weight: 700;
        color: #d4af37;
        letter-spacing: 4px;
        text-transform: uppercase;
    }

    .tick {
        font-family: "Inter", sans-serif;
        font-size: 50px;
    }

    .voting-title {
        font-family: "Inter", sans-serif;
        font-size: 40px;
        font-weight: 200;
        text-align: center;
        color: #1a1a1a;
    }

    .divider {
        width: 60px;
        height: 4px;
        background-color: #d4af37;
        border-radius: 2px;
    }
</style>
